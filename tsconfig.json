{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "swiper": [
                "node_modules/swiper"
            ]
        },
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "swiper.d.ts",
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}